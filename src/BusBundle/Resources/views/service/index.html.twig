{% extends 'BusBundle::base.html.twig' %}

{% block content %}
    <h1>{{ 'Services list'|trans }}</h1>

    <div class="text-right">
        <a href="{{ path('service_new') }}" class="btn btn-sm btn-success">{{ 'Create a new service'|trans }}</a>
    </div>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Path'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td><a href="{{ path('service_show', { 'id': service.id }) }}">{{ service.name }}</a></td>
                <td><a href="{{ path('service_call', { 'path': service.path }) }}">{{ path('service_call', { 'path': service.path }) }}</a></td>
                <td>
                    <a href="{{ path('service_edit', { 'id': service.id }) }}" class="btn btn-sm btn-warning">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
